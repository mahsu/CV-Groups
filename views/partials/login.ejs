<link rel="stylesheet" type="text/css" href="/css/login.css">

<body>
<div layout="column" class="loginPage">

    <md-whiteframe class="mt" layout="" layout-align="center center">
        <img src="img/logo.png" alt="logo"/>
    </md-whiteframe>
    <md-whiteframe layout="" layout-align="center center">
        <h1>CV Groups</h1>
    </md-whiteframe>

    <md-whiteframe class="md-whiteframe-z1" layout="" layout-align="center center">
        <md-content class="md-padding">
            <md-tabs md-dynamic-height="" md-border-bottom="">
                <md-tab label="Login">
                    <md-content layout-padding="">
                        <form name="loginForm" ng-submit="login(user, user.$valid)">
                            <div layout="" layout-sm="column">
                                <md-input-container flex="">
                                    <label>Email</label>
                                    <input type="email" ng-model="user.email">
                                </md-input-container>
                            </div>
                            <div layout="" layout-sm="column">
                                <md-input-container flex="">
                                    <label>Password</label>
                                    <input type="password" ng-model="user.password">
                                </md-input-container>
                            </div>
                            <md-button type="submit" class="md-raised md-primary buttonLarge">Log In
                            </md-button>
                        </form>
                    </md-content>
                </md-tab>
                <md-tab label="Register">
                    <md-content layout-padding="">
                        <form name="registrationForm" ng-submit="register(user, user.$valid)">
                            <div layout="" layout-sm="column">
                                <md-input-container flex="">
                                    <label>Email</label>
                                    <input ng-model="user.email" type="email">
                                </md-input-container>
                            </div>
                            <div layout="" layout-sm="column">
                                <md-input-container flex="">
                                    <label>Password</label>
                                    <input ng-model="user.password" type="password">
                                </md-input-container>
                            </div>
                            <div layout="" layout-sm="column">
                                <md-input-container flex="">
                                    <label>First name</label>
                                    <input ng-model="user.name.last">
                                </md-input-container>
                                <md-input-container flex="">
                                    <label>Last Name</label>
                                    <input ng-model="user.name.first">
                                </md-input-container>
                            </div>
                            <div layout="" layout-sm="column">
                                <md-input-container flex="">
                                    <label>Address</label>
                                    <input ng-model="user.address.street" type="text">
                                </md-input-container>
                            </div>
                            <div layout="" layout-sm="column">
                                <md-input-container>
                                    <label>City</label>
                                    <input type="text" ng-model="user.address.city">
                                </md-input-container>
                                <md-select placeholder="State" ng-model="user.address.state">
                                    <md-option data-ng-repeat="state in states" value="{{state.abbrev}}">
                                        {{state.abbrev}}
                                    </md-option>
                                </md-select>
                                <md-input-container flex="">
                                    <label>Postal Code</label>
                                    <input ng-model="user.address.zip">
                                </md-input-container>
                            </div>
                            <md-button class="md-raised md-primary buttonLarge">Register
                            </md-button>
                        </form>
                    </md-content>
                </md-tab>
            </md-tabs>
        </md-content>
    </md-whiteframe>

</div>
</body>
