<body>
<md-toolbar layout="row">
    <div class="md-toolbar-tools">
        <md-button class="md-raised md-primary">
            <a href="/landing" ng-click="window.history.back();"><i class="fa fa-chevron-left"></i></a>
        </md-button>
        <img class="cv-logo" src="img/logo.png" alt="logo"/>

        <h1> Groups </h1>
    </div>
</md-toolbar>

<div layout="column" class="inputdemoBasicUsage">
    <md-whiteframe class="md-whiteframe-z1 newPostFrame" layout="" layout-align="center center">
        <md-content class="newPostContent" layout-padding="" flex style="padding:10px;">
            <form name="userForm" ng-submit="newPost()">

                <div layout=" " layout-sm="column" ng-hide="true">

                    <md-input-container flex="">
                        <label>Submission Date</label>
                        <input type="date" ng-model="user.submissionDate">
                    </md-input-container>
                </div>

                <md-input-container flex="" md-no-float="">
                    <textarea name="postText" ng-model="postText" placeholder="Write Something.." columns="1"
                              md-maxlength="140"></textarea>
                </md-input-container>
                <div class="newPostButtonRow">
                    <i class="fa fa-camera"></i>

                    <div class="newPostButton">
                        <md-button class="md-raised md-primary">Post</md-button>
                    </div>
                </div>

            </form>
        </md-content>
    </md-whiteframe>


    <md-card class="postCard" ng-repeat="item in messages|reverse">
        <md-card-content>
            <h2 class="md-title">FirstN LastN</h2>
            <h6>{{item.created_at}}</h6>

            <p>
                {{item.body}}
            </p>
        </md-card-content>
        <div class="md-actions" layout="row" layout-align="end center">
            <md-button>..more</md-button>
            <md-button><i class="fa fa-thumbs-o-up"></i> {{item.upvoted_by.length}}</md-button>
            <md-button><i class="fa fa-thumbs-o-down"></i> {{item.downvoted_by.length}}</md-button>
        </div>

        <md-divider ng-if="!$last"></md-divider>
        <md-content>
            <md-list>
                <md-list-item class="md-3-line" >

                    <div class="md-list-item-text">
                        <h4>Comment</h4>
                    </div>
                    <md-divider ng-if="!$last"></md-divider>
                </md-list-item>
            </md-list>
        </md-content>

        <md-divider></md-divider>


        <md-input-container md-no-float="" layout="row" class="commentSection">
            <div class="commentText">
                <input name="commentText" ng-model="commentText" placeholder="Write a comment..">
            </div>
            <md-button class="md-raised md-primary newCommentButton">Comment</md-button>

        </md-input-container>
    </md-card>
    <br>
</div>
</body>
